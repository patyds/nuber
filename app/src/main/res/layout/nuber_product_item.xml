<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
                                             xmlns:app="http://schemas.android.com/apk/res-auto"
                                             xmlns:tools="http://schemas.android.com/tools"
                                             android:layout_width="match_parent"
                                             android:layout_height="wrap_content">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:paddingVertical="30dp"
            android:paddingHorizontal="10dp"
            android:layout_height="wrap_content">
        <ImageView
                android:layout_width="wrap_content"
                android:paddingRight="10dp"
                android:layout_height="wrap_content" app:srcCompat="@mipmap/salad"
                android:id="@+id/imageView" app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="0dp"
                android:layout_marginTop="0dp" app:layout_constraintTop_toTopOf="parent"
                android:layout_marginBottom="0dp"
                app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintVertical_bias="0.0"/>
        <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/salad_name" android:textSize="24sp"
                    android:layout_marginTop="0dp" app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginEnd="0dp"
                    app:layout_constraintEnd_toEndOf="parent" app:layout_constraintStart_toEndOf="@+id/imageView"
                    android:layout_marginStart="0dp" app:layout_constraintHorizontal_bias="0.2"/>
            <TextView
                    android:text="$100.00"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" android:id="@+id/salad_price_textView"
                    android:textSize="18sp"/>
            <TextView
                    android:text="TextView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/salad_description"
                    app:layout_constraintTop_toBottomOf="@+id/salad_name"
                    app:layout_constraintStart_toStartOf="@+id/salad_name"
                    app:layout_constraintEnd_toEndOf="@+id/salad_name" android:layout_marginBottom="8dp"
                    app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintHorizontal_bias="0.0"
                    app:layout_constraintVertical_bias="0.0" android:textSize="18sp"/>
        </LinearLayout>
    </LinearLayout>
</android.support.constraint.ConstraintLayout>